pkgname=gnotepad
pkgver=1.0.8
pkgrel=1
epoch=
pkgdesc="GNotepad"
arch=(x86_64)
url=""
license=('GPL')
depends=('gtk-old')
source=(
	"https://download.gnome.org/desktop/1.0/1.0/sources/gnotepad%2B-1.0.8.tar.gz"
)
md5sums=('7366f8dafdcfea1076cea9c14ace852c')

prepare() {
	cd "gnotepad+-$pkgver"
}

build() {
	cd "gnotepad+-$pkgver"
	./configure \
		--prefix=/usr
	make
}

check() {
	cd "gnotepad+-$pkgver"
	make -k check
}

package() {
	cd "gnotepad+-$pkgver"
	make prefix="$pkgdir/usr/" install
}
