pkgname=gedit-old
pkgver=0.5.1
pkgrel=1
epoch=
pkgdesc="An old version of gedit"
arch=(x86_64)
url=""
license=('GPL')
depends=(gnome-libs)
source=(
	"https://download.gnome.org/desktop/1.0/1.0/sources/gedit-0.5.1.tar.gz"
	"configure.patch"
)
md5sums=('81c85575ac6be775d4c4cd06e0974599'
         'cada285d91bb2443b93e882d8e06641d')

prepare() {
	cd "gedit-$pkgver"
	patch -p1 -i "$srcdir/configure.patch"
}

build() {
	cd "gedit-$pkgver"
	./configure \
		--prefix=/usr
	make
}

check() {
	cd "gedit-$pkgver"
	make -k check
}

package() {
	cd "gedit-$pkgver"
	make DESTDIR="$pkgdir/" install
}
